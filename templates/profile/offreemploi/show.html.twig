{% extends 'base.html.twig' %}

{% block title %}Offre d'Emploi Details{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header border-bottom border-dashed">
                        <h4 class="card-title mb-0">Offre d'Emploi Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                {% if offreemploi.imageurl %}
                                    <img src="{{ asset('Uploads/offers/' ~ offreemploi.imageurl) }}" alt="Offer Image" class="img-fluid rounded mb-3" style="max-width: 150px;">
                                {% else %}
                                    <img src="{{ asset('images/default-offer.png') }}" alt="Default Image" class="img-fluid rounded mb-3" style="max-width: 150px;">
                                {% endif %}
                                <h5 class="mb-0">{{ offreemploi.titre }}</h5>
                                <p class="text-muted">{{ offreemploi.emplacement }}</p>
                            </div>
                            <div class="col-md-8">
                                <div class="table-responsive">
                                    <table class="table table-bordered mb-0">
                                        <tbody>
                                        <tr>
                                            <th>Type de Poste</th>
                                            <td>{{ offreemploi.typeposte }}</td>
                                        </tr>
                                        <tr>
                                            <th>Type de Contrat</th>
                                            <td>{{ offreemploi.typecontrat }}</td>
                                        </tr>
                                        <tr>
                                            <th>État</th>
                                            <td>
                                                    <span class="badge {% if offreemploi.etat == 'active' %}bg-success{% else %}bg-danger{% endif %}">
                                                        {{ offreemploi.etat|capitalize }}
                                                    </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Date de Publication</th>
                                            <td>{{ offreemploi.datepublication|date('Y-m-d') }}</td>
                                        </tr>
                                        <tr>
                                            <th>Dernière Mise à Jour</th>
                                            <td>{{ offreemploi.updatedAt|date('Y-m-d H:i') }}</td>
                                        </tr>
                                        <tr>
                                            <th>Description</th>
                                            <td>{{ offreemploi.description|raw }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2 mt-4">
                            <a href="{{ path('app_offreemploi_edit', {'id': offreemploi.id}) }}" class="btn btn-primary"><i class="ti ti-pencil me-1"></i> Edit</a>
                            <form method="post" action="{{ path('app_offreemploi_delete', {'id': offreemploi.id}) }}" onsubmit="return confirm('Are you sure you want to delete this offre d\'emploi?');" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offreemploi.id) }}">
                                <button type="submit" class="btn btn-danger"><i class="ti ti-trash me-1"></i> Delete</button>
                            </form>
                            <a href="{{ path('app_offreemploi_index') }}" class="btn btn-secondary"><i class="ti ti-arrow-left me-1"></i> Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
