{% extends 'base.html.twig' %}

{% block title %}Les Cliniques | Osen - Responsive Bootstrap 5 Admin Dashboard{% endblock %}

{% block css %}
<!-- App css -->
<link href="{{ asset('assets/css/app.min.css') }}" rel="stylesheet" type="text/css" id="app-style" />

<!-- Icons css -->
<link href="{{ asset('assets/css/icons.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<!-- Begin page -->
    <!-- Page Content -->

        <div class="page-container">
            <div class="page-title-head d-flex align-items-sm-center flex-sm-row flex-column gap-2">
                <div class="flex-grow-1">
                    <h4 class="fs-18 fw-semibold mb-0">Les Cliniques</h4>
                </div>
                <div class="text-end">
                    <ol class="breadcrumb m-0 py-0">
                        <li class="breadcrumb-item"><a href="#">Osen</a></li>
                        <li class="breadcrumb-item"><a href="#">Hospital</a></li>
                        <li class="breadcrumb-item active">Doctors</li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
                            <h4 class="header-title">Liste des cliniques</h4>
                            <div>
                                <a href="{{ path('app_clinique_new') }}" class="btn btn-success bg-gradient">
                                    <i class="ti ti-plus me-1"></i> Ajouter clinique
                                </a>
                                <a href="#" class="btn btn-secondary bg-gradient">
                                    <i class="ti ti-file-import me-1"></i> Import
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-nowrap mb-0">
                                <thead class="bg-light-subtle">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom </th>
                                        <th>Description</th>
                                        <th>Adresse</th>
                                        <th>Email</th>
                                        <th>Telephone</th>
                                        <th>Prix</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for clinique in cliniques %}
                                        <tr>
                                            <td>{{ clinique.id_clinique }}</td>
                                            <td>{{ clinique.nom }}</td>
                                            <td>{{ clinique.description }}</td>
                                            <td>{{ clinique.adresse }}</td>
                                            <td>{{ clinique.email }}</td>
                                            <td>{{ clinique.telephone }}</td>
                                            <td>{{ clinique.prix }} €</td>
                                            <td class="pe-3">
                                                <div class="hstack gap-1 justify-content-end">
                                                    <a href="{{ path('app_clinique_show', {'id_clinique': clinique.id_clinique}) }}" class="btn btn-soft-primary btn-icon btn-sm rounded-circle"> <i class="ti ti-eye"></i></a>
                                                    <a href="{{ path('app_clinique_edit', {'id_clinique': clinique.id_clinique}) }}" class="btn btn-soft-success btn-icon btn-sm rounded-circle"> <i class="ti ti-edit fs-16"></i></a>
                                                    <a href="#" class="btn btn-soft-danger btn-icon btn-sm rounded-circle"onclick="deleteClinique({{ clinique.id_clinique }}); return false;"><i class="ti ti-trash"></i></a>

                                                </div></td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8" class="text-center">Aucune clinique trouvée.</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                               
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    

{% endblock %}

{% block js %}
<!-- Vendor js -->
<script src="{{ asset('assets/js/vendor.min.js') }}"></script>

<!-- App js -->
<script src="{{ asset('assets/js/vendor.min.js') }}"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    function deleteClinique(id) {
        Swal.fire({
            title: 'Êtes-vous sûr ?',
            text: "Cette action est irréversible !",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Oui, supprimer',
            cancelButtonText: 'Annuler'
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/clinique/${id}/delete`; // adapte si nécessaire
                form.style.display = 'none';

                const csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '_token';
                csrfInput.value = '{{ csrf_token("delete") }}' + id;

                form.appendChild(csrfInput);
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>




{% endblock %}

