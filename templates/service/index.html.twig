{% extends 'base.html.twig' %}

{% block title %}Liste des Services{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Services</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom du service</th>
                    <th>Hébergement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for service in services %}
                    <tr>
                        <td>{{ service.id }}</td>
                        <td>{{ service.nomService }}</td>
                        <td>{{ service.hebergement ? service.hebergement.nom : 'Non assigné' }}</td>
                        <td>
                            <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-info">Voir</a>
                            <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-warning">Modifier</a>
                            <form method="post" action="{{ path('app_service_delete', {'id': service.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce service ?');" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                <button class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun service trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_service_new') }}" class="btn btn-primary">Créer un nouveau service</a>
    </div>
{% endblock %} 