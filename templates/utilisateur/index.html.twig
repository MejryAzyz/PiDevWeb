{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-12"> <!-- Use col-xl-12 to make the table full-width (adjust as needed) -->
            <div class="card">
                <div class="card-header border-bottom border-dashed d-flex align-items-center">
                    <h4 class="header-title">Liste des Utilisateurs</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Liste de tous les utilisateurs enregistrés dans le système.
                    </p>
                    <div class="table-responsive-sm">
                        <table class="table table-bordered mb-0">
                            <thead>
                                <tr>
                                    <th>Utilisateur</th>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Email</th>
                                    <th>Téléphone</th>
                                    <th>Date de naissance</th>
                                    <th>Adresse</th>
                                    <th>Nationalité</th>
                                    <th>Statut</th>
                                    <th>Vérification</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for utilisateur in utilisateurs %}
                                    <tr>
                                        <td>
                                            {% if utilisateur.imageUrl %}
                                                <img src="{{ utilisateur.imageUrl }}" alt="user-image" class="avatar-sm me-2 rounded-circle" />
                                            {% else %}
                                                <img src="https://i.ibb.co/9mxR5m5r/fbe2ee4adabe.png" alt="default-user-image" class="avatar-sm me-2 rounded-circle" />
                                            {% endif %}
                                            {{ utilisateur.nom }} {{ utilisateur.prenom }}
                                        </td>
                                        <td>{{ utilisateur.idUtilisateur }}</td>
                                        <td>{{ utilisateur.nom }}</td>
                                        <td>{{ utilisateur.prenom }}</td>
                                        <td>{{ utilisateur.email }}</td>
                                        <td>{{ utilisateur.telephone }}</td>
                                        <td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('Y-m-d') : '' }}</td>
                                        <td>{{ utilisateur.adresse }}</td>
                                        <td>{{ utilisateur.nationalite }}</td>
                                        <td>{{ utilisateur.status }}</td>
                                        <td>{{ utilisateur.verif }}</td>
                                        <td class="text-center text-muted">
                                            <a href="{{ path('app_utilisateur_show', {'id_utilisateur': utilisateur.idUtilisateur}) }}" class="link-reset fs-20 p-1">
                                                <i class="ti ti-eye"></i>
                                            </a>
                                            <a href="{{ path('app_utilisateur_edit', {'id_utilisateur': utilisateur.idUtilisateur}) }}" class="link-reset fs-20 p-1">
                                                <i class="ti ti-edit"></i>
                                            </a>
                                          <form method="post" action="{{ path('app_utilisateur_delete', {'id_utilisateur': utilisateur.idUtilisateur}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.idUtilisateur) }}">
                                                <button type="submit" class="link-reset fs-20 p-1 border-0 bg-transparent">
                                                    <i class="ti ti-trash"></i>
                                                </button>
                                            </form>
                                            

                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="12" class="text-center">Aucun utilisateur trouvé</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div> <!-- end table-responsive -->
                    <div class="mt-3">
                        <a href="{{ path('app_utilisateur_new') }}" class="btn btn-primary">Créer un nouvel utilisateur</a>
                    </div>
                </div> <!-- end card body -->
            </div> <!-- end card -->
        </div> <!-- end col -->
    </div> <!-- end row -->
{% endblock %}