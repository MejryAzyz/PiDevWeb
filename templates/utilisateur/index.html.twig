{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header border-bottom border-dashed d-flex align-items-center">
                    <h4 class="header-title">Liste des Utilisateurs</h4>
                </div>
                <div class="card-body">
                    {# Search Form #}
                    <div class="row mb-4">
                        <div class="col-md-12">
                            {{ form_start(searchForm, {'attr': {'class': 'row g-3'}},{'method': 'get'}) }}
                                <div class="col-md-4">
                                    {{ form_row(searchForm.search) }}
                                </div>
                                <div class="col-md-3">
                                    {{ form_row(searchForm.nationalite) }}
                                </div>
                                <div class="col-md-3">
                                    {{ form_row(searchForm.status) }}
                                </div>
                                <div class="col-md-2">
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary w-100" style="margin-top: 32px;">
                                            <i class="fas fa-search"></i> Rechercher
                                        </button>
                                        <a href="{{ path('app_utilisateur_index', app.request.query.all|merge({'direction': sortDirection == 'asc' ? 'desc' : 'asc'})) }}" 
                                           class="btn btn-outline-primary" 
                                           style="margin-top: 32px;"
                                           title="{{ sortDirection == 'asc' ? 'Trier par ID décroissant' : 'Trier par ID croissant' }}">
                                            <i class="fas fa-sort-{{ sortDirection == 'asc' ? 'down' : 'up' }}"></i>
                                        </a>
                                    </div>
                                </div>
                            {{ form_end(searchForm) }}
                        </div>
                    </div>

                    <div class="table-responsive-sm">
                        <table class="table table-bordered mb-0">
                            <thead>
                                <tr>
                                    <th>Utilisateur</th>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Email</th>
                                    <th>Téléphone</th>
                                    <th>Date de naissance</th>
                                    <th>Adresse</th>
                                    <th>Nationalité</th>
                                    <th>Statut</th>
                                    <th>Vérification</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for utilisateur in utilisateurs %}
                                    <tr class="{{ utilisateur.status == 0 ? 'table-danger' : '' }}">
                                        <td>
                                            {% if utilisateur.imageUrl %}
                                                <img src="{{ utilisateur.imageUrl }}" alt="user-image" class="avatar-sm me-2 rounded-circle" />
                                            {% else %}
                                                <img src="https://i.ibb.co/9mxR5m5r/fbe2ee4adabe.png" alt="default-user-image" class="avatar-sm me-2 rounded-circle" />
                                            {% endif %}
                                            {{ utilisateur.nom }} {{ utilisateur.prenom }}
                                            {% if utilisateur.status == 0 %}
                                                <span class="badge bg-danger">Banni</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ utilisateur.idUtilisateur }}</td>
                                        <td>{{ utilisateur.nom }}</td>
                                        <td>{{ utilisateur.prenom }}</td>
                                        <td>{{ utilisateur.email }}</td>
                                        <td>{{ utilisateur.telephone }}</td>
                                        <td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('Y-m-d') : '' }}</td>
                                        <td>{{ utilisateur.adresse }}</td>
                                        <td>{{ utilisateur.nationalite }}</td>
                                        <td>
                                            {% if utilisateur.status == 1 %}
                                                <span class="badge bg-success">Actif</span>
                                            {% else %}
                                                <span class="badge bg-danger">Banni</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ utilisateur.verif }}</td>
                                        <td class="text-center text-muted">
                                            <a href="{{ path('app_utilisateur_show', {'id_utilisateur': utilisateur.idUtilisateur}) }}" class="link-reset fs-20 p-1" title="Voir">
                                                <i class="ti ti-eye"></i>
                                            </a>
                                            <a href="{{ path('app_utilisateur_edit', {'id_utilisateur': utilisateur.idUtilisateur}) }}" class="link-reset fs-20 p-1" title="Modifier">
                                                <i class="ti ti-edit"></i>
                                            </a>
                                            {% if utilisateur.status == 1 %}
                                                <form method="post" action="{{ path('app_utilisateur_ban', {'id_utilisateur': utilisateur.idUtilisateur}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir bannir cet utilisateur ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('ban' ~ utilisateur.idUtilisateur) }}">
                                                    <button type="submit" class="link-reset fs-20 p-1 border-0 bg-transparent" title="Bannir">
                                                        <i class="ti ti-ban text-danger"></i>
                                                    </button>
                                                </form>
                                            {% else %}
                                                <form method="post" action="{{ path('app_utilisateur_unban', {'id_utilisateur': utilisateur.idUtilisateur}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir débloquer cet utilisateur ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('unban' ~ utilisateur.idUtilisateur) }}">
                                                    <button type="submit" class="link-reset fs-20 p-1 border-0 bg-transparent" title="Débloquer">
                                                        <i class="ti ti-check text-success"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                            <form method="post" action="{{ path('app_utilisateur_delete', {'id_utilisateur': utilisateur.idUtilisateur}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.idUtilisateur) }}">
                                                <button type="submit" class="link-reset fs-20 p-1 border-0 bg-transparent" title="Supprimer">
                                                    <i class="ti ti-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="12" class="text-center">Aucun utilisateur trouvé</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    <div class="d-flex justify-content-center mt-3">
                        {{ knp_pagination_render(utilisateurs) }}
                    </div>

                   
                </div>
            </div>
        </div>
    </div>
{% endblock %}