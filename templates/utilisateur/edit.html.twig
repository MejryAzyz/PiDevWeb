{% extends 'base.html.twig' %}

{% block title %}Edit Utilisateur{% endblock %}

{% block body %}
<div class="col-lg-8 mx-auto" style="margin-top: 100px;">
    <div class="card">
        <div class="card-header border-bottom border-dashed d-flex align-items-center">
            <h4 class="header-title">Modifier un Utilisateur</h4>
        </div>
        <div class="card-body">
            <p class="text-muted">
                Modifiez les informations de l'utilisateur ci-dessous.
            </p>

            {{ form_start(form, {'attr': {'class':'rt-form', 'novalidate': 'novalidate'}}) }}

            <div class="row mb-3">
                <label class="col-md-3 col-form-label" for="{{ form.nom.vars.id }}">Nom</label>
                <div class="col-md-9">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-3 col-form-label" for="{{ form.prenom.vars.id }}">Prénom</label>
                <div class="col-md-9">
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-3 col-form-label" for="{{ form.email.vars.id }}">Email</label>
                <div class="col-md-9">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-3 col-form-label" for="{{ form.telephone.vars.id }}">Téléphone</label>
                <div class="col-md-9">
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.telephone) }}
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-3 col-form-label" for="{{ form.date_naissance.vars.id }}">Date de naissance</label>
                <div class="col-md-9">
                    {{ form_widget(form.date_naissance, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_naissance) }}
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-3 col-form-label" for="{{ form.nationalite.vars.id }}">Nationalité</label>
                <div class="col-md-9">
                    {{ form_widget(form.nationalite, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nationalite) }}
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-3 col-form-label" for="{{ form.adresse.vars.id }}">Adresse</label>
                <div class="col-md-9">
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
<div class="row mb-3">
                <label class="col-md-3 col-form-label" for="{{ form.role.vars.id }}">role</label>
                <div class="col-md-9">
                    {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.role) }}
                </div>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Mettre à jour') }}</button>
                <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>

            {{ form_end(form) }}

            <div class="mt-3">
                {{ include('utilisateur/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
