{% extends 'base.html.twig' %}

{% block title %}Edit Accompagnateur{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header border-bottom border-dashed">
                        <h4 class="card-title mb-0">Edit Accompagnateur</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.username) }}</label>
                                {{ form_widget(form.username) }}
                                {{ form_errors(form.username) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.password_hash) }}</label>
                                {{ form_widget(form.password_hash) }}
                                {{ form_errors(form.password_hash) }}
                                <small class="text-muted">Leave blank to keep the current password.</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.email) }}</label>
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.statut) }}</label>
                                {{ form_widget(form.statut) }}
                                {{ form_errors(form.statut) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.fichier_cv) }}</label>
                                {{ form_widget(form.fichier_cv) }}
                                {{ form_errors(form.fichier_cv) }}
                                {% if accompagnateur.fichier_cv %}
                                    <small class="text-muted">Current CV: <a href="{{ asset('uploads/CVs/' ~ accompagnateur.fichier_cv) }}" target="_blank">View</a></small>
                                {% endif %}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.photo_profil) }}</label>
                                {{ form_widget(form.photo_profil) }}
                                {{ form_errors(form.photo_profil) }}
                                {% if accompagnateur.photo_profil %}
                                    <small class="text-muted">Current Photo: <img src="{{ asset('Uploads/photos/' ~ accompagnateur.photo_profil) }}" alt="Current Photo" style="max-width: 50px;"></small>
                                {% endif %}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.langues) }}</label>
                                {{ form_widget(form.langues) }}
                                {{ form_errors(form.langues) }}
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">{{ form_label(form.experience) }}</label>
                                {{ form_widget(form.experience) }}
                                {{ form_errors(form.experience) }}
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">{{ form_label(form.motivation) }}</label>
                                {{ form_widget(form.motivation) }}
                                {{ form_errors(form.motivation) }}
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary"><i class="ti ti-check me-1"></i> Save</button>
                            <a href="{{ path('app_accompagnateur_index') }}" class="btn btn-secondary"><i class="ti ti-x me-1"></i> Cancel</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}