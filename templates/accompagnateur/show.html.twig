{% extends 'base.html.twig' %}

{% block title %}Accompagnateur Details{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header border-bottom border-dashed">
                        <h4 class="card-title mb-0">Accompagnateur Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <img src="{{ asset('uploads/photos/' ~ accompagnateur.photo_profil) }}" alt="Profile Photo" class="img-fluid rounded-circle mb-3" style="max-width: 150px;">
                                <h5 class="mb-0">{{ accompagnateur.username }}</h5>
                                <p class="text-muted">{{ accompagnateur.email }}</p>
                            </div>
                            <div class="col-md-8">
                                <div class="table-responsive">
                                    <table class="table table-bordered mb-0">
                                        <tbody>
                                        <tr>
                                            <th>ID</th>
                                            <td>{{ accompagnateur.id_accompagnateur }}</td>
                                        </tr>
                                        <tr>
                                            <th>Status</th>
                                            <td>
                                                <span class="badge {% if accompagnateur.statut == 'Active' %}bg-success{% else %}bg-danger{% endif %}">
                                                    {{ accompagnateur.statut }}
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Languages</th>
                                            <td>{{ accompagnateur.langues }}</td>
                                        </tr>
                                        <tr>
                                            <th>CV</th>
                                            <td>
                                                {% if accompagnateur.fichier_cv %}
                                                    <a href="{{ asset('uploads/CVs/' ~ accompagnateur.fichier_cv) }}" class="text-primary" target="_blank">View CV</a>
                                                {% else %}
                                                    No CV uploaded
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Experience</th>
                                            <td>{{ accompagnateur.experience|raw }}</td>
                                        </tr>
                                        <tr>
                                            <th>Motivation</th>
                                            <td>{{ accompagnateur.motivation|raw }}</td>
                                        </tr>
                                        <tr>
                                            <th>Date Inscription</th>
                                            <td>{{ accompagnateur.date_inscription|date('Y-m-d H:i') }}</td>
                                        </tr>
                                        <tr>
                                            <th>Date Recrutement</th>
                                            <td>{{ accompagnateur.date_recrutement|date('Y-m-d') }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2 mt-4">
                            <a href="{{ path('app_accompagnateur_edit', {'id': accompagnateur.id_accompagnateur}) }}" class="btn btn-primary"><i class="ti ti-pencil me-1"></i> Edit</a>
                            <form method="post" action="{{ path('app_accompagnateur_delete', {'id': accompagnateur.id_accompagnateur}) }}" onsubmit="return confirm('Are you sure you want to delete this accompagnateur?');" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accompagnateur.id_accompagnateur) }}">
                                <button type="submit" class="btn btn-danger"><i class="ti ti-trash me-1"></i> Delete</button>
                            </form>
                            <a href="{{ path('app_accompagnateur_index') }}" class="btn btn-secondary"><i class="ti ti-arrow-left me-1"></i> Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}