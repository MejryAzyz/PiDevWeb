{% extends 'base.html.twig' %}

{% block title %}Accompagnateurs{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header border-bottom border-dashed">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title mb-0 flex-grow-1">Accompagnateurs</h4>
                            <div class="flex-shrink-0">
                                <a href="{{ path('app_accompagnateur_new') }}" class="btn btn-primary btn-sm">
                                    <i class="ti ti-plus me-1"></i> Add New
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle mb-0" id="accompagnateurs-table">
                                <thead class="table-light">
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Statut</th>
                                    <th>Date Inscription</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for accompagnateur in pagination %}
                                    <tr>
                                        <td>{{ accompagnateur.username }}</td>
                                        <td>{{ accompagnateur.email }}</td>
                                        <td>
                                            <span class="badge {% if accompagnateur.statut == 'Accepted' %}bg-success{% elseif accompagnateur.statut == 'Rejected' %}bg-danger{% else %}bg-primary{% endif %}">
                                                {{ accompagnateur.statut }}
                                            </span>
                                        </td>
                                        <td>{{ accompagnateur.date_inscription|date('Y-m-d H:i') }}</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="{{ path('app_accompagnateur_show', {'id': accompagnateur.id_accompagnateur}) }}" class="btn btn-soft-info btn-sm">
                                                    <i class="ti ti-eye"></i>
                                                </a>
                                                <a href="{{ path('app_accompagnateur_edit', {'id': accompagnateur.id_accompagnateur}) }}" class="btn btn-soft-primary btn-sm">
                                                    <i class="ti ti-pencil"></i>
                                                </a>
                                                <form action="{{ path('app_accompagnateur_delete', {'id': accompagnateur.id_accompagnateur}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this accompagnateur?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accompagnateur.id_accompagnateur) }}">
                                                    <button type="submit" class="btn btn-soft-danger btn-sm">
                                                        <i class="ti ti-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No accompagnateurs found.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% if pagination|length > 0 %}
                            <div class="d-flex justify-content-center mt-4">
                                {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig', {}, {
                                    'align': 'center',
                                    'size': 'sm',
                                    'rounded': true
                                }) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
