{% extends 'base.html.twig' %}

{% block title %}Paiement index{% endblock %}

{% block body %}
    <h1>Paiement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_paiement</th>
                <th>Montant</th>
                <th>Date_paiement</th>
                <th>Methode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paiement in paiements %}
            <tr>
                <td>{{ paiement.idPaiement }}</td>
                <td>{{ paiement.montant }}</td>
                <td>{{ paiement.datePaiement ? paiement.datePaiement|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ paiement.methode }}</td>
                <td>
                    <a href="{{ path('app_paiement_show', {'id_paiement': paiement.id_paiement}) }}">show</a>
                    <a href="{{ path('app_paiement_edit', {'id_paiement': paiement.id_paiement}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_paiement_new') }}">Create new</a>
{% endblock %}
