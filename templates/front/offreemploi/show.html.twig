{% extends 'baseFront.html.twig' %}

{% block title %}{{ offreemploi.titre }} - Emigrar{% endblock %}

{% block body %}
    <!-- Job Header -->
    <div class="rt-breadcump rt-breadcump-height">
        <div class="rt-page-bg rtbgprefix-cover" style="background-image: url({{ asset('coderthemes.com/osen/layouts/assets/images/backgrounds/bredcump.png') }})">
        </div><!-- /.rt-page-bg -->
        <div class="container">
            <div class="row rt-breadcump-height">
                <div class="col-12">
                    <div class="breadcrumbs-content">
                        <h3>Job Details</h3>
                        <div class="breadcrumbs">
                            <span class="divider"><i class="icofont-home"></i></span>
                            <a href="{{ path('app_front_offreemploi_index') }}" title="Home">Home</a>
                            <span class="divider"><i class="icofont-simple-right"></i></span>
                            <a href="{{ path('app_front_offreemploi_index') }}" title="Jobs">Jobs</a>
                            <span class="divider"><i class="icofont-simple-right"></i></span>
                            {{ offreemploi.titre }}
                        </div><!-- /.breadcrumbs -->
                    </div><!-- /.breadcrumbs-content -->
                </div><!-- /.col-12 -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.rt-bredcump -->

    <!-- Job Content -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Main Content -->
                <div class="col-lg-8">
                    <!-- Job Header Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-4">
                                {% if offreemploi.imageurl and offreemploi.imageurl != '' %}
                                    <div class="flex-shrink-0">
                                        <img src="{{ asset('uploads/offers/' ~ offreemploi.imageurl) }}" 
                                             alt="{{ offreemploi.titre }}" 
                                             class="rounded"
                                             style="width: 120px; height: 120px; object-fit: cover;"
                                             onerror="this.onerror=null; this.src='{{ asset('assets/images/default-job.png') }}';">
                                    </div>
                                {% else %}
                                    <div class="flex-shrink-0">
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                             style="width: 120px; height: 120px;">
                                            <i class="fas fa-briefcase fa-3x text-muted"></i>
                                        </div>
                                    </div>
                                {% endif %}
                                <div class="ms-4">
                                    <h1 class="h3 mb-2">{{ offreemploi.titre }}</h1>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-map-marker-alt me-2"></i>{{ offreemploi.emplacement }}
                                    </p>
                                    <div class="mb-3">
                                        <span class="badge bg-primary me-2">{{ offreemploi.typeposte }}</span>
                                        <span class="badge bg-info">{{ offreemploi.typecontrat }}</span>
                                    </div>
                                    <a href="{{ path('app_accompagnateur_new', {'offre_id': offreemploi.id}) }}" 
                                       class="btn btn-primary">
                                        <i class="fas fa-paper-plane me-2"></i>Apply Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Job Description Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Job Description</h4>
                            <div class="job-description">
                                {{ offreemploi.description|nl2br }}
                            </div>
                        </div>
                    </div>

                    <!-- Application Process -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title mb-4">How to Apply</h4>
                            <div class="mb-4">
                                <p>To apply for this position, please follow these steps:</p>
                                <ol class="mb-4">
                                    <li>Click on the "Apply Now" button</li>
                                    <li>Fill out your personal information</li>
                                    <li>Upload your CV and other required documents</li>
                                    <li>Submit your application</li>
                                </ol>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Make sure to complete all required fields and provide accurate information.
                                </div>
                            </div>
                            <a href="{{ path('app_accompagnateur_new', {'offre_id': offreemploi.id}) }}" 
                               class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Start Application
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Quick Info Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Job Overview</h5>
                            <ul class="list-unstyled mb-0">
                                <li class="d-flex mb-3">
                                    <i class="fas fa-calendar text-primary me-3 mt-1"></i>
                                    <div>
                                        <small class="text-muted d-block">Posted Date</small>
                                        <strong>{{ offreemploi.datepublication|date('M d, Y') }}</strong>
                                    </div>
                                </li>
                                <li class="d-flex mb-3">
                                    <i class="fas fa-briefcase text-primary me-3 mt-1"></i>
                                    <div>
                                        <small class="text-muted d-block">Job Type</small>
                                        <strong>{{ offreemploi.typeposte }}</strong>
                                    </div>
                                </li>
                                <li class="d-flex mb-3">
                                    <i class="fas fa-file-contract text-primary me-3 mt-1"></i>
                                    <div>
                                        <small class="text-muted d-block">Contract Type</small>
                                        <strong>{{ offreemploi.typecontrat }}</strong>
                                    </div>
                                </li>
                                <li class="d-flex">
                                    <i class="fas fa-map-marker-alt text-primary me-3 mt-1"></i>
                                    <div>
                                        <small class="text-muted d-block">Location</small>
                                        <strong>{{ offreemploi.emplacement }}</strong>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Share Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Share This Job</h5>
                            <div class="d-flex gap-2">
                                <a href="#" class="btn btn-outline-primary flex-grow-1">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="btn btn-outline-info flex-grow-1">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="btn btn-outline-success flex-grow-1">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Similar Jobs Card -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Similar Jobs</h5>
                            <div class="list-group list-group-flush">
                                {% for similar in offreemplois|slice(0, 3) %}
                                    {% if similar.id != offreemploi.id %}
                                        <a href="{{ path('app_front_offreemploi_show', {'id': similar.id}) }}" 
                                           class="list-group-item list-group-item-action border-0 px-0">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1">{{ similar.titre }}</h6>
                                                    <small class="text-muted">
                                                        <i class="fas fa-map-marker-alt me-1"></i>{{ similar.emplacement }}
                                                    </small>
                                                </div>
                                                <small class="text-muted">{{ similar.datepublication|date('M d') }}</small>
                                            </div>
                                        </a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .bg-primary {
            background-color: #0d6efd !important;
        }
        .card {
            border: none;
            border-radius: 8px;
        }
        .badge {
            font-weight: 500;
            padding: 0.5em 1em;
        }
        .btn-primary {
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
        }
        .breadcrumb-item + .breadcrumb-item::before {
            color: rgba(255, 255, 255, 0.5);
        }
        .job-description {
            line-height: 1.8;
        }
        .list-group-item:hover {
            background-color: #f8f9fa;
        }
    </style>
{% endblock %} 