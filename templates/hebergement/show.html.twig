{% extends 'base.html.twig' %}

{% block title %}Détails de l'Hébergement{% endblock %}

{% block body %}
   

  
   
        <div class="container-fluid">
            <div class="page-title-head d-flex align-items-sm-center flex-sm-row flex-column gap-2">
                <div class="flex-grow-1">
                    <h4 class="fs-18 fw-semibold mb-0">Détails de l'Hébergement</h4>
                </div>
                <div class="text-end">
                    <ol class="breadcrumb m-0 py-0">
                        <li class="breadcrumb-item"><a href="#">MedTravel</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_hebergement_index') }}">Hébergements</a></li>
                        <li class="breadcrumb-item active">Détails</li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-4 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                                <div class="dr-profile-bg rounded-top position-relative mx-n3  position-relative" style="height: 270px;">                                {% if hebergement.imageUrl %}
                                        <img src="{{ hebergement.imageUrl }}" alt="{{ hebergement.nom }}" 
                                         class="border border-light border-6 rounded position-absolute top-110 start-50 translate-middle" 
                                         style="width: 375px; height: 250px; object-fit: cover;">                                {% else %}
                                    <img src="{{ asset('assets/images/default-hotel.jpg') }}" alt="Par défaut" class="border border-light border-3 rounded-circle position-absolute top-100 start-50 translate-middle" height="100" width="100">
                                {% endif %}
                            </div>
                            <div class="mt-12 mb-4 pt-6 text-center">
                                <p class="mb-1 fs-18 fw-semibold text-dark">{{ hebergement.nom }}</p>
                            </div>
                            <h5 class="card-title fw-semibold">À propos de l'Hébergement :</h5>
                            <p class="mt-2">Situé à {{ hebergement.adresse }}, cet hébergement offre une capacité de {{ hebergement.capacite }} personnes à {{ hebergement.tarifNuit }} par nuit.</p>
                            <div class="mt-3">
                                <div class="row">
                                    <div class="col-lg-6 col-6">
                                        <h5>Capacité</h5>
                                        <p class="fs-15 text-dark fw-semibold mb-0">{{ hebergement.capacite }}</p>
                                    </div>
                                    <div class="col-lg-6 col-6">
                                        <h5>Tarif par nuit</h5>
                                        <p class="fs-15 text-dark fw-semibold mb-0">{{ hebergement.tarifNuit }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                       

                    </div>
                </div>

                <div class="col-xl-8 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Informations sur l'Hébergement :</h4>
                            <div class="table-responsive mt-3 border border-dashed rounded px-2 py-1">
                                <table class="table table-borderless m-0">
                                    <tbody>
                                        <tr>
                                            <td><p class="mb-0">Nom :</p></td>
                                            <td class="px-2 text-dark fw-medium fs-14">{{ hebergement.nom }}</td>
                                        </tr>
                                        <tr>
                                            <td><p class="mb-0">Adresse :</p></td>
                                            <td class="px-2 text-dark fw-medium fs-14">{{ hebergement.adresse }}</td>
                                        </tr>
                                        <tr>
                                            <td><p class="mb-0">Numéro de téléphone :</p></td>
                                            <td class="px-2 text-dark fw-medium fs-14">{{ hebergement.telephone }}</td>
                                        </tr>
                                        <tr>
                                            <td><p class="mb-0">Email :</p></td>
                                            <td class="px-2 text-dark fw-medium fs-14">{{ hebergement.email }}</td>
                                        </tr>
                                        <tr>
                                            <td><p class="mb-0">Capacité :</p></td>
                                            <td class="px-2 text-dark fw-medium fs-14">{{ hebergement.capacite }}</td>
                                        </tr>
                                        <tr>
                                            <td><p class="mb-0">Tarif par nuit :</p></td>
                                            <td class="px-2 text-dark fw-medium fs-14">{{ hebergement.tarifNuit }}</td>
                                        </tr>
                                        {% if hebergement.imageUrl %}
                                        <tr>
                                            <td><p class="mb-0">Image :</p></td>
                                            <td class="px-2 text-dark fw-medium fs-14">
                                                <a href="{{ hebergement.imageUrl }}" target="_blank">Voir l'image</a>
                                            </td>
                                        </tr>
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>

                            <h4 class="card-title mt-4">Services disponibles :</h4>
                            <div class="table-responsive mt-3 border border-dashed rounded px-2 py-1">
                                <div class="row g-3">
                                    {% if hebergement.service %}
                                        <div class="col-md-4">
                                            <div class="service-item">
                                                <i class="ti ti-wifi {{ hebergement.service.wifi ? 'text-success' : 'text-muted' }}"></i>
                                                <span class="{{ hebergement.service.wifi ? 'fw-medium' : 'text-muted' }}">Wi-Fi</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="service-item">
                                                <i class="ti ti-snowflake {{ hebergement.service.climatisation ? 'text-success' : 'text-muted' }}"></i>
                                                <span class="{{ hebergement.service.climatisation ? 'fw-medium' : 'text-muted' }}">Climatisation</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="service-item">
                                                <i class="ti ti-brush {{ hebergement.service.menageQuotidien ? 'text-success' : 'text-muted' }}"></i>
                                                <span class="{{ hebergement.service.menageQuotidien ? 'fw-medium' : 'text-muted' }}">Ménage quotidien</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="service-item">
                                                <i class="ti ti-bell-ringing {{ hebergement.service.conciergerie ? 'text-success' : 'text-muted' }}"></i>
                                                <span class="{{ hebergement.service.conciergerie ? 'fw-medium' : 'text-muted' }}">Service de conciergerie</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="service-item">
                                                <i class="ti ti-bed {{ hebergement.service.lingeLit ? 'text-success' : 'text-muted' }}"></i>
                                                <span class="{{ hebergement.service.lingeLit ? 'fw-medium' : 'text-muted' }}">Linge de lit</span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="service-item">
                                                <i class="ti ti-bath {{ hebergement.service.salleBainPrivee ? 'text-success' : 'text-muted' }}"></i>
                                                <span class="{{ hebergement.service.salleBainPrivee ? 'fw-medium' : 'text-muted' }}">Salle de bain privée</span>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="col-12">
                                            <p class="text-muted mb-0">Aucun service n'est configuré pour cet hébergement.</p>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="card-footer border-top gap-1 hstack">
                            <a href="{{ path('app_hebergement_index') }}" class="btn btn-light w-100">Retour à la liste</a>
                            <a href="{{ path('app_hebergement_edit', {'id_hebergement': hebergement.idHebergement}) }}" class="btn btn-dark d-inline-flex align-items-center justify-content-center rounded avatar-md">
                                <i class="ti ti-edit fs-20"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/js/vendor.min.js') }}"></script>
    <script src="{{ asset('assets/js/app.js') }}"></script>
{% endblock %}