<script>
    document.addEventListener('DOMContentLoaded', function() {
        // RÃ©cupÃ©rer les clÃ©s API depuis les variables Twig
        const ipapiApiKey = '{{ ipapi_api_key }}';
        const exchangeRatesApiKey = '{{ exchange_rates_api_key }}';
        const geminiApiKey = '{{ gemini_api_key }}'; // Add Gemini API key

        // Fonction pour extraire le prix d'une chaÃ®ne de caractÃ¨res
        function extractPrice(text) {
            const match = text.match(/(\d+(?:[.,]\d{1,2})?)/);
            return match ? parseFloat(match[1].replace(',', '.')) : null;
        }

        // Fonction pour obtenir la localisation de l'utilisateur
        async function getUserLocation() {
            try {
                const response = await fetch(`https://api.ipapi.com/api/check?access_key=${ipapiApiKey}`);
                if (!response.ok) {
                    throw new Error('Erreur de rÃ©ponse de l\'API');
                }
                const data = await response.json();
                console.log('DonnÃ©es de localisation:', data);
                
                // DÃ©terminer la devise en fonction du pays
                let currency = 'EUR'; // Devise par dÃ©faut
                if (data.country_code === 'TN') {
                    currency = 'TND';
                } else if (data.country_code === 'US') {
                    currency = 'USD';
                } else if (data.country_code === 'GB') {
                    currency = 'GBP';
                }
                // Ajoutez d'autres pays et devises selon vos besoins

                return {
                    country: data.country_name,
                    currency: currency
                };
            } catch (error) {
                console.error('Erreur lors de la gÃ©olocalisation:', error);
                return {
                    country: 'France',
                    currency: 'EUR'
                };
            }
        }

        // Fonction pour convertir les prix
        async function convertPrices(currency) {
            try {
                const response = await fetch(`https://api.exchangerate-api.com/v4/latest/EUR?api_key=${exchangeRatesApiKey}`);
                if (!response.ok) {
                    throw new Error('Erreur de rÃ©ponse de l\'API de conversion');
                }
                const data = await response.json();
                console.log('DonnÃ©es de conversion:', data);
                const rate = data.rates[currency];
                
                if (!rate) {
                    console.error('Taux de change non trouvÃ© pour la devise:', currency);
                    return;
                }

                // Convertir tous les prix affichÃ©s
                document.querySelectorAll('.price-badge').forEach(element => {
                    const originalPrice = extractPrice(element.textContent);
                    if (originalPrice !== null) {
                        const convertedPrice = (originalPrice * rate).toFixed(2);
                        element.textContent = `${convertedPrice} ${currency} / Nuit`;
                        console.log('Prix converti:', originalPrice, '->', convertedPrice, currency);
                    } else {
                        console.warn('Prix non trouvÃ© dans:', element.textContent);
                    }
                });
            } catch (error) {
                console.error('Erreur lors de la conversion des devises:', error);
            }
        }

        // Fonction pour mettre Ã  jour l'interface avec les informations de localisation
        async function updateLocationInfo() {
            try {
                const location = await getUserLocation();
                console.log('Localisation dÃ©tectÃ©e:', location);
                
                const locationInfo = document.createElement('div');
                locationInfo.className = 'location-info text-muted mb-3';
                locationInfo.innerHTML = `
                    <i class="icofont-location-pin"></i> 
                    Prix affichÃ©s en ${location.currency} pour les utilisateurs de ${location.country}
                `;
                
                // InsÃ©rer l'info de localisation aprÃ¨s le titre
                const title = document.querySelector('.breadcrumbs-content h3');
                if (title) {
                    title.parentNode.insertBefore(locationInfo, title.nextSibling);
                }
                
                // Convertir les prix si la devise n'est pas l'euro
                if (location.currency !== 'EUR') {
                    await convertPrices(location.currency);
                }
            } catch (error) {
                console.error('Erreur lors de la mise Ã  jour des informations:', error);
            }
        }

        // Appeler la fonction de mise Ã  jour
        updateLocationInfo();

        // Initialiser le slider de prix
        var priceSlider = document.querySelector('.slider-range');
        if (priceSlider) {
            var minPrice = parseFloat(priceSlider.dataset.min);
