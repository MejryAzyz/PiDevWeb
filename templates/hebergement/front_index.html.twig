            if (isNaN(maxCapacity)) maxCapacity = 1000;
            if (isNaN(currentMinCapacity)) currentMinCapacity = minCapacity;
            if (isNaN(currentMaxCapacity)) currentMaxCapacity = maxCapacity;
            
            $(capacitySlider).slider({
                range: true,
                min: minCapacity,
                max: maxCapacity,
                values: [currentMinCapacity, currentMaxCapacity],
                slide: function(event, ui) {
                    $('#capacity_min').val(ui.values[0]);
                    $('#capacity_max').val(ui.values[1]);
                },
                stop: function(event, ui) {
                    $('#capacity_min').val(ui.values[0]);
                    $('#capacity_max').val(ui.values[1]);
                }
            });
            
            // Set initial values
            $('#capacity_min').val(currentMinCapacity);
            $('#capacity_max').val(currentMaxCapacity);
        }
    });
</script>
