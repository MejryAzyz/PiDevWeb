    </div>
</div>
{% endblock %}

{% block js %}
<!-- Vendor js -->
<script src="{{ asset('coderthemes.com/osen/layouts/assets/vendor/apexcharts/apexcharts.min.js') }}"></script>
<script src="{{ asset('coderthemes.com/osen/layouts/assets/js/vendor.min.js') }}"></script>
<!-- Removed dashboard-clinic.js to prevent static chart interference -->
<!-- <script src="{{ asset('coderthemes.com/osen/layouts/assets/js/pages/dashboard-clinic.js') }}"></script> -->

<!-- Sweet Alerts js -->
<script src="{{ asset('coderthemes.com/osen/layouts/assets/vendor/sweetalert2/sweetalert2.min.js') }}"></script>

<!-- App js -->
<script src="{{ asset('coderthemes.com/osen/layouts/assets/js/app.js') }}"></script>

<script>
function initializeCharts() {
    // Pass PHP data to JavaScript
    const tariffs = {{ tariffs|raw }};
    const capacityData = {{ capacity_data|raw }};

    // Check if the area chart element exists
    const areaElement = document.querySelector("#sessions-overview-users");
    if (!areaElement) {
        console.error("Area chart element not found in DOM");
        return;
    }

    // Clear any existing content in the chart element to prevent overlap
    areaElement.innerHTML = '';

    // Area Chart - Tariff Trends
    var areaOptions = {
        series: [{
            name: 'Tariff per Night',
            data: tariffs
        }],
        chart: {
            height: 350,
            type: 'area',
            zoom: {
                enabled: false
            }
        },
        dataLabels: {
            enabled: false
        },
        stroke: {
            curve: 'smooth'
        },
        xaxis: {
            type: 'category',
            categories: capacityData.map(item => item[0]) // Accommodation names
        },
        colors: ['#465dff'],
        fill: {
            type: 'gradient',
            gradient: {
                shadeIntensity: 1,
                opacityFrom: 0.7,
                opacityTo: 0.9,
            }
        },
        tooltip: {
            y: {
                formatter: function(val) {
                    return val + " TND";
                }
            }
        }
    };
    var areaChart = new ApexCharts(areaElement, areaOptions);
    areaChart.render();
}

// Ensure DOM is fully loaded before initializing charts
document.addEventListener('DOMContentLoaded', function() {
    initializeCharts();

    // Delete button handler
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const deleteUrl = this.getAttribute('data-url');
            const hebergementId = this.getAttribute('data-id');
            const csrfToken = this.getAttribute('data-token');

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = deleteUrl;
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '_token';
                    tokenInput.value = csrfToken;
                    form.appendChild(tokenInput);
                    document.body.appendChild(form);

                    fetch(deleteUrl, {
                        method: 'POST',
                        body: new FormData(form)
                    }).then(response => {
                        if (response.ok) {
                            Swal.fire(
                                'Deleted!',
                                'The hebergement has been deleted.',
                                'success'
                            ).then(() => {
                                button.closest('tr').remove();
                            });
                        } else {
                            Swal.fire(
                                'Error!',
                                'There was a problem deleting the hebergement.',
                                'error'
                            );
                        }
                    }).catch(error => {
                        Swal.fire(
                            'Error!',
                            'There was a problem deleting the hebergement.',
                            'error'
                        );
                    }).finally(() => {
                        document.body.removeChild(form);
                    });
                }
            });
        });
    });

    // PDF Export button handler
    document.getElementById('exportPdfBtn').addEventListener('click', function(e) {
        e.preventDefault();
        Swal.fire({
            title: 'Génération du PDF',
            text: 'Veuillez patienter pendant la génération du document...',
            allowOutsideClick: false,
            timer: 3000,
            didOpen: () => {
                Swal.showLoading();
            }
        });
        setTimeout(() => {
            window.location.href = this.href;
        }, 500);
    });
});
</script>
{% endblock %}