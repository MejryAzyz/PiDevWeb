{% extends 'base.html.twig' %}

{% block title %}Les Spécialités | Osen - Responsive Bootstrap 5 Admin Dashboard{% endblock %}

{% block css %}
<!-- App css -->
<link href="{{ asset('assets/css/app.min.css') }}" rel="stylesheet" type="text/css" id="app-style" />

<!-- Icons css -->
<link href="{{ asset('assets/css/icons.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<div class="page-container">
    <div class="page-title-head d-flex align-items-sm-center flex-sm-row flex-column gap-2">
        <div class="flex-grow-1">
            <h4 class="fs-18 fw-semibold mb-0">Les Spécialités</h4>
        </div>
        <div class="text-end">
            <ol class="breadcrumb m-0 py-0">
                <li class="breadcrumb-item"><a href="#">Osen</a></li>
                <li class="breadcrumb-item"><a href="#">Hospital</a></li>
                <li class="breadcrumb-item active">Spécialités</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
                    <h4 class="header-title">Liste des spécialités</h4>
                    <div>
                        <a href="{{ path('app_specialite_new') }}" class="btn btn-success bg-gradient">
                            <i class="ti ti-plus me-1"></i> Ajouter spécialité
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-nowrap mb-0">
                        <thead class="bg-light-subtle">
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for specialite in specialites %}
                                <tr>
                                    <td>{{ specialite.id_specialite }}</td>
                                    <td>{{ specialite.nom }}</td>
                                    <td class="pe-3">
                                        <div class="hstack gap-1 ">
                                            <a href="{{ path('app_specialite_show', {'id_specialite': specialite.id_specialite}) }}" class="btn btn-soft-primary btn-icon btn-sm rounded-circle"> <i class="ti ti-eye"></i></a>
                                            <a href="{{ path('app_specialite_edit', {'id_specialite': specialite.id_specialite}) }}" class="btn btn-soft-success btn-icon btn-sm rounded-circle"> <i class="ti ti-edit fs-16"></i></a>
                                            <button class="btn btn-soft-danger btn-icon btn-sm rounded-circle delete-btn" 
                                                data-id="{{ specialite.id_specialite }}"
                                                data-url="{{ path('app_specialite_delete', {'id_specialite': specialite.id_specialite}) }}"
                                                data-token="{{ csrf_token('delete' ~ specialite.id_specialite) }}">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                            
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">Aucune spécialité trouvée.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script src="{{ asset('assets/js/vendor.min.js') }}"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const deleteUrl = this.getAttribute('data-url');
                const cliniqueId = this.getAttribute('data-id');
                const csrfToken = this.getAttribute('data-token');

                Swal.fire({
                    title: 'Êtes-vous sûr ?',
                    text: "Cette action est irréversible !",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Oui, supprimer',
                    cancelButtonText: 'Annuler'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Créer un formulaire pour soumettre la requête POST
                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = deleteUrl;

                        // Ajouter le token CSRF
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '_token';
                        tokenInput.value = csrfToken;
                        form.appendChild(tokenInput);

                        document.body.appendChild(form);

                        fetch(deleteUrl, {
                            method: 'POST',
                            body: new FormData(form)
                        }).then(response => {
                            if (response.ok) {
                                Swal.fire(
                                    'Supprimé !',
                                    'La spécialité a été supprimée avec succès.',
                                    'success'
                                ).then(() => {
                                    button.closest('tr').remove();
                                });
                            } else {
                                Swal.fire(
                                    'Erreur !',
                                    "Une erreur s'est produite lors de la suppression de la spécialité.",
                                    'error'
                                );
                            }
                        }).catch(error => {
                            Swal.fire(
                                'Erreur !',
                                "Une erreur s'est produite lors de la suppression de la spécialité.",
                                'error'
                            );
                        }).finally(() => {
                            document.body.removeChild(form);
                        });
                    }
                });
            });
        });
    });
</script>

{% endblock %}
