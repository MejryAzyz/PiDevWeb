{% extends 'base.html.twig' %}

{% block title %}Ajouter un Docteur | Osen - Tableau de Bord Admin Bootstrap 5{% endblock %}

{% block css %}
    <link href="{{ asset('assets/vendor/select2/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <style>
        .form-error {
            color: red;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="page-title-head d-flex align-items-sm-center flex-sm-row flex-column gap-2">
            <div class="flex-grow-1">
                <h4 class="fs-18 fw-semibold mb-0">Ajouter un Docteur</h4>
            </div>
            <div class="text-end">
                <ol class="breadcrumb m-0 py-0">
                    <li class="breadcrumb-item"><a href="#">Osen</a></li>
                    <li class="breadcrumb-item"><a href="#">Gestion Docteur</a></li>
                    <li class="breadcrumb-item active">Ajouter un Docteur</li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-7">
                <div class="card">
                    <div class="card-header border-bottom border-dashed">
                        <h4 class="card-title mb-0">Informations de Base</h4>
                    </div>
                    <div class="card-body">
                        <!-- Début du formulaire -->
                        {{ form_start(form, {'method': 'POST', 'action': path('app_docteur_new')}) }}

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="{{ form.nom.vars.id }}" class="form-label">Nom</label>
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="{{ form.prenom.vars.id }}" class="form-label">Prénom</label>
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prénom'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.prenom) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="{{ form.telephone.vars.id }}" class="form-label">Numéro de Téléphone</label>
                                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le numéro'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.telephone) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="{{ form.email.vars.id }}" class="form-label">Adresse Email</label>
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l’email'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="{{ form.clinique.vars.id }}" class="form-label">Clinique</label>
                                    {{ form_widget(form.clinique, {'attr': {'class': 'form-select'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.clinique) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="{{ form.specialite.vars.id }}" class="form-label">Spécialité</label>
                                    {{ form_widget(form.specialite, {'attr': {'class': 'form-select'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.specialite) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Boutons de soumission -->
                        <div class="text-end mb-3">
                            <button type="submit" class="btn btn-primary">Ajouter le Docteur</button>
                            <a href="{{ path('app_docteur_index') }}" class="btn btn-danger">Annuler</a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/vendor/select2/js/select2.min.js') }}"></script>
{% endblock %}
