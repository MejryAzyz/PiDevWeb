{% extends 'base.html.twig' %}

{% block title %}Les Transports{% endblock %}

{% block css %}
<!-- App css -->
<link href="{{ asset('coderthemes.com/osen/layouts/assets/css/app.min.css') }}" rel="stylesheet" type="text/css" id="app-style" />

<!-- Icons css -->
<link href="{{ asset('coderthemes.com/osen/layouts/assets/css/icons.min.css') }}" rel="stylesheet" type="text/css" />

<!-- Sweet Alert css -->
<link href="{{ asset('coderthemes.com/osen/layouts/assets/vendor/sweetalert2/sweetalert2.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<div class="page-container">
    <div class="page-title-head d-flex align-items-sm-center flex-sm-row flex-column gap-2">
        <div class="flex-grow-1">
            <h4 class="fs-18 fw-semibold mb-0">Transports</h4>
        </div>
        <div class="text-end">
            <ol class="breadcrumb m-0 py-0">
                <li class="breadcrumb-item"><a href="#">MedTravel</a></li>
                <li class="breadcrumb-item active">Transport</li>
            </ol>
        </div>
    </div>

    <div class="row row-cols-xxl-5 row-cols-md-3 row-cols-1 align-items-center">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <a href="#!" class="text-muted float-end mt-n1 fs-18"><i class="ti ti-external-link"></i></a>
                    <h5 class="text-muted fs-13 text-uppercase" title="Capacité Totale">Capacité Totale</h5>
                    <div class="d-flex align-items-center gap-2 my-3">
                        <div class="avatar-md flex-shrink-0">
                            <span class="avatar-title bg-primary-subtle text-primary rounded fs-22">
                                <i class="ti ti-bus"></i>
                            </span>
                        </div>
                        <h3 class="mb-0 fw-bold">{{ total_capacity }} <span class="badge text-bg-success fw-medium ms-2 fs-12">Disponible</span></h3>
                    </div>
                    <p class="mb-0">
                        <span class="text-primary me-1"><i class="ti ti-point-filled"></i></span>
                        <span class="text-nowrap text-muted">Basé sur {{ transports|length }} transports</span>
                    </p>
                </div>
            </div>
        </div><!-- end col -->

        <div class="col">
            <div class="card">
                <div class="card-body">
                    <a href="#!" class="text-muted float-end mt-n1 fs-18"><i class="ti ti-external-link"></i></a>
                    <h5 class="text-muted fs-13 text-uppercase" title="Tarif Moyen">Tarif Moyen</h5>
                    <div class="d-flex align-items-center gap-2 my-3">
                        <div class="avatar-md flex-shrink-0">
                            <span class="avatar-title bg-primary-subtle text-primary rounded fs-22">
                                <i class="ti ti-currency-dollar"></i>
                            </span>
                        </div>
                        <h3 class="mb-0 fw-bold">{{ average_tariff|round(2) }} TND</h3>
                    </div>
                    <p class="mb-0">
                        <span class="text-primary me-1"><i class="ti ti-point-filled"></i></span>
                        <span class="text-nowrap text-muted">Moyenne sur {{ transports|length }} transports</span>
                    </p>
                </div>
            </div>
        </div><!-- end col -->

        <div class="col">
            <div class="card">
                <div class="card-body">
                    <a href="#!" class="text-muted float-end mt-n1 fs-18"><i class="ti ti-external-link"></i></a>
                    <h5 class="text-muted fs-13 text-uppercase" title="Nombre Total de Transports">Total Transports</h5>
                    <div class="d-flex align-items-center gap-2 my-3">
                        <div class="avatar-md flex-shrink-0">
                            <span class="avatar-title bg-primary-subtle text-primary rounded fs-22">
                                <i class="ti ti-list"></i>
                            </span>
                        </div>
                        <h3 class="mb-0 fw-bold">{{ total_transports }}</h3>
                    </div>
                    <p class="mb-0">
                        <span class="text-primary me-1"><i class="ti ti-point-filled"></i></span>
                        <span class="text-nowrap text-muted">Transports actifs</span>
                    </p>
                </div>
            </div>
        </div><!-- end col -->
    </div><!-- end row -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between border-bottom border-light">
                    <h4 class="header-title">Liste des Transports</h4>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_transport_export_pdf') }}" class="btn btn-danger bg-gradient" id="exportPdfBtn">
                            <i class="ti ti-file-export me-1"></i> Exporter PDF
                        </a>
                        <a href="{{ path('app_transport_new') }}" class="btn btn-success bg-gradient">
                            <i class="ti ti-plus me-1"></i> Ajouter Transport
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Type</th>
                                <th>Capacité</th>
                                <th>Tarif</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for transport in transports %}
                            <tr>
                                <td>{{ transport.idTransport }}</td>
                                <td>{{ transport.type }}</td>
                                <td>{{ transport.capacite }}</td>
                                <td>{{ transport.tarif }} TND</td>
                                <td class="pe-3">
                                    <div class="hstack gap-1">
                                        <a href="{{ path('app_transport_show', {'id_transport': transport.idTransport}) }}" class="btn btn-soft-primary btn-icon btn-sm rounded-circle">
                                            <i class="ti ti-eye"></i>
                                        </a>
                                        <a href="{{ path('app_transport_edit', {'id_transport': transport.idTransport}) }}" class="btn btn-soft-success btn-icon btn-sm rounded-circle">
                                            <i class="ti ti-edit fs-16"></i>
                                        </a>
                                        <button class="btn btn-soft-danger btn-icon btn-sm rounded-circle delete-btn" 
                                                data-id="{{ transport.idTransport }}"
                                                data-url="{{ path('app_transport_delete', {'id_transport': transport.idTransport}) }}"
                                                data-token="{{ csrf_token('delete' ~ transport.idTransport) }}">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun transport trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<!-- Vendor js -->
<script src="{{ asset('coderthemes.com/osen/layouts/assets/js/vendor.min.js') }}"></script>

<!-- Sweet Alerts js -->
<script src="{{ asset('coderthemes.com/osen/layouts/assets/vendor/sweetalert2/sweetalert2.min.js') }}"></script>

<!-- App js -->
<script src="{{ asset('coderthemes.com/osen/layouts/assets/js/app.js') }}"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const deleteUrl = this.getAttribute('data-url');
            const transportId = this.getAttribute('data-id');
            const csrfToken = this.getAttribute('data-token');

            Swal.fire({
                title: 'Êtes-vous sûr ?',
                text: "Vous ne pourrez pas annuler cette action !",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui, supprimer !',
                cancelButtonText: 'Annuler'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = deleteUrl;
                    
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '_token';
                    tokenInput.value = csrfToken;
                    form.appendChild(tokenInput);
                    
                    document.body.appendChild(form);
                    
                    fetch(deleteUrl, {
                        method: 'POST',
                        body: new FormData(form)
                    }).then(response => {
                        if (response.ok) {
                            Swal.fire(
                                'Supprimé !',
                                'Le transport a été supprimé avec succès.',
                                'success'
                            ).then(() => {
                                button.closest('tr').remove();
                            });
                        } else {
                            Swal.fire(
                                'Erreur !',
                                'Un problème est survenu lors de la suppression du transport.',
                                'error'
                            );
                        }
                    }).catch(error => {
                        Swal.fire(
                            'Erreur !',
                            'Un problème est survenu lors de la suppression du transport.',
                            'error'
                        );
                    }).finally(() => {
                        document.body.removeChild(form);
                    });
                }
            });
        });
    });

    // Gestionnaire pour le bouton d'export PDF
    document.getElementById('exportPdfBtn').addEventListener('click', function(e) {
        e.preventDefault();

        Swal.fire({
            title: 'Génération du PDF',
            text: 'Veuillez patienter pendant la génération du document...',
            allowOutsideClick: false,
            timer: 3000, // Ferme automatiquement après 5 secondes
            didOpen: () => {
                Swal.showLoading() // Affiche le spinner pendant le timer
            }
        });

        // Redirection vers la route d'export PDF après un petit délai pour laisser le popup s'afficher
        setTimeout(() => {
            window.location.href = this.href;
        }, 500); // 0.5s pour ne pas interrompre l'affichage
    });
});
</script>
{% endblock %}