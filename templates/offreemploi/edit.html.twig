{% extends 'base.html.twig' %}

{% block title %}Edit Offre d'Emploi{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header border-bottom border-dashed">
                        <h4 class="card-title mb-0">Edit Offre d'Emploi</h4>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.titre) }}</label>
                                {{ form_widget(form.titre) }}
                                {{ form_errors(form.titre) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.typeposte) }}</label>
                                {{ form_widget(form.typeposte) }}
                                {{ form_errors(form.typeposte) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.typecontrat) }}</label>
                                {{ form_widget(form.typecontrat) }}
                                {{ form_errors(form.typecontrat) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.emplacement) }}</label>
                                {{ form_widget(form.emplacement) }}
                                {{ form_errors(form.emplacement) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form_label(form.imageFile) }}</label>
                                {{ form_widget(form.imageFile) }}
                                {{ form_errors(form.imageFile) }}
                                {% if offreemploi.imageFile %}
                                    <small class="text-muted">Current Image: <img src="{{ asset('Uploads/offers/' ~ offreemploi.imageFile) }}" alt="Current Image" style="max-width: 50px;"></small>
                                {% endif %}
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">{{ form_label(form.description) }}</label>
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary"><i class="ti ti-check me-1"></i> Save</button>
                            <a href="{{ path('app_offreemploi_index') }}" class="btn btn-secondary"><i class="ti ti-x me-1"></i> Cancel</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
