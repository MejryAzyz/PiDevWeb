            {{ form_label(form.etat, null, {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0">
                        <i class="fas fa-toggle-on text-primary"></i>
                    </span>
                {{ form_widget(form.etat, {'attr': {
                    'class': 'form-control custom-select',
                    'placeholder': 'Select status'
                }}) }}
            </div>
            {{ form_errors(form.etat) }}
        </div>
    </div>

    <div class="col-12">
        <div class="form-group">
            {{ form_label(form.imageFile, null, {'label_attr': {'class': 'form-label'}}) }}
            <div class="custom-file-input">
                {{ form_widget(form.imageFile, {'attr': {
                    'class': 'form-control',
                    'accept': 'image/*'
                }}) }}
                <label class="custom-file-label d-flex align-items-center">
                    <i class="fas fa-image me-2"></i>
                    <span class="file-name">Choose an image</span>
                </label>
            </div>
            {{ form_errors(form.imageFile) }}
        </div>
    </div>
</div>

<div class="d-flex justify-content-end gap-3 mt-4">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-submit">
        <i class="fas fa-save me-2"></i>Save Job Offer
    </button>
</div>
{{ form_end(form) }}

<script>
    $(document).ready(function() {
        // Initialize Select2
        $('.custom-select').select2({
            theme: 'bootstrap-5',
            dropdownParent: $('#newJobModal'),
            width: '100%'
        });

        // File input label update
        $('input[type="file"]').on('change', function() {
            const fileName = $(this).val().split('\\').pop();
            $(this).next('.custom-file-label').find('.file-name').text(fileName || 'Choose an image');
        });

        // Form submission
        $('form').on('submit', function(e) {
            e.preventDefault();
            const form = $(this);
            const formData = new FormData(this);

            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message,
                            customClass: {
                                popup: 'glass-effect'
                            }
                        }).then(() => {
                            window.location.reload();
                        });
                    }
                },
                error: function(xhr) {
                    const response = xhr.responseJSON;
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: response?.message || 'An error occurred while saving the job offer.',
                        customClass: {
                            popup: 'glass-effect'
                        }
                    });
                }
            });
        });
    });
</script>